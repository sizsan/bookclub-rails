<h1 class="heading"><%= "Review for #{@review.book.title}"%></h1>

<%=form_with model: @review do |form|%>
<%= form.hidden_field :book_id%>
<p>
  <%= label :rating, 'Rating' %>
  <%= form.number_field :rating, min: 1, max: 5, required: true %>
</p>
<p>
  <%=label :comment, 'Comments'%>
  <%= form.text_area :comment, class: "text-field" %>
</p>
 <%= form.submit "Add review", class: "button"%>

 <p class="link item-link"><%= link_to 'Cancel', :back, class: "button"%>

<%end%>